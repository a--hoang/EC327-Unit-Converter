<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_weight="1"
    tools:context=".Home">

    <View
        android:id="@+id/centerShim"
        android:layout_height="match_parent"
        android:layout_width="0dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Unit Converter"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="false"
        android:gravity="center"
        android:textSize="30dp"
        android:visibility="visible" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/martaButton"
        android:padding="2dp"
        android:layout_below="@+id/title"
        android:layout_toStartOf="@+id/centerShim"
        android:layout_alignParentLeft="true"
        android:layout_alignLeft="@+id/cynthiaButton"
        android:layout_toLeftOf="@+id/centerShim"
        android:background="@drawable/ec327_main_martacooking"
        />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/cynthiaButton"
        android:layout_below="@+id/martaButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_toRightOf="@+id/centerShim"
        android:layout_toLeftOf="@+id/centerShim"
        android:layout_toStartOf="@+id/centerShim"
        android:background="@drawable/ec327_main_cynthiamath"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/jpButton"
        android:background="@color/darkOrange"
        android:layout_below="@+id/martaButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/centerShim"
        android:layout_toEndOf="@+id/centerShim" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/cindyButton"
        android:background="@drawable/ec327_main_cindyphysics"
        android:layout_above="@+id/cynthiaButton"
        android:layout_toRightOf="@+id/martaButton"
        android:layout_toEndOf="@+id/martaButton"
        android:layout_below="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Numberfact goes here"
        android:id="@+id/textView2"
        android:layout_alignRight="@+id/jpButton"
        android:layout_alignEnd="@+id/jpButton"
        android:layout_below="@+id/cynthiaButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:textSize="30dp"
        android:textAlignment="gravity" />


</RelativeLayout>
